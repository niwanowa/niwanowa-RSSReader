{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "docker-build",
        "type": "shell",
        "command": "docker",
        "args": ["build", "-t", "${config:dockerContainerName}-discord-bot", "."]
      },
      {
        "label": "docker-stop",
        "type": "shell",
        "command": "docker",
        "args": ["stop", "${config:dockerContainerName}-discord-bot"]
      },
      {
        "label": "docker-start",
        "type": "shell",
        "command": "docker",
        "args": ["start", "${config:dockerContainerName}-discord-bot"],
      },
      {
        "label": "build and run",
        "dependsOrder": "sequence",
        "dependsOn": ["docker-stop", "docker-build","docker-run"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  